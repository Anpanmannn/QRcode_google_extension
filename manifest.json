{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0",
  "description": "在網頁右下角顯示QRCode",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
} 